<div id="page-content">
  <h1 class="text-center mt-4">Listing Articles</h1>

  
  <% @article.each do |article| %>
    <div class="card mx-auto mt-4 w-50 shadow mb-5 bg-white rounded" style="width: 18rem;">
      <div class="card-body text-center">
        <div class="card-header font-italic">
          by Bruno Feitosa
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= link_to article.title, article_path(article), class: "text-danger" %></h4>
          <div class="card-text text-left"><%= simple_format(truncate(article.description, length: 200)) %></div>
          <button type="button" class="btn btn-outline-primary"><%= link_to 'Show', article %></button>
          <button type="button" class="btn btn-outline-secondary"><%= link_to 'Edit', edit_article_path(article) %></button>
          <button type="button" class="btn btn-outline-warning"><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %>ago, 
          edited <%= time_ago_in_words(article.updated_at) %>ago.</small>
        </div>
      </div>
    </div>
  <% end %>

  <p>
    <%= link_to 'New Article', new_article_path%>
  </p>
</div>